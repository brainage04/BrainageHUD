{
	"schemaVersion": 1,
	"id": "${archives_base_name}",
	"version": "${version}",
	"name": "${mod_name}",
	"description": "A mod that adds useful HUD elements to Minecraft.",
	"authors": [
		"brainage04"
	],
	"contact": {
		"homepage": "https://github.com/brainage04/${mod_name}",
		"sources": "https://github.com/brainage04/${mod_name}"
	},
	"license": "MIT",
	"icon": "assets/brainagehud/icon.png",
	"environment": "*",
	"entrypoints": {
		"client": [
          "io.github.brainage04.brainagehud.BrainageHUD"
		],
		"fabric-datagen": [
          "io.github.brainage04.brainagehud.datagen.DataGenerator"
		],
		"modmenu": [
          "io.github.brainage04.brainagehud.modmenu.ModMenuIntegration"
		]
	},
	"mixins": [
		"brainagehud.mixins.json"
	],
	"depends": {
		"fabricloader": ">=${loader_version}",
		"minecraft": "~${minecraft_version}",
		"java": ">=21",
		"fabric-api": "*"
	},
	"accessWidener" : "brainagehud.accesswidener"
}
